<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="uk.me.mungorae.androidweekly.ui.main.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_mainFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>
    <fragment
        android:id="@+id/articleFragment"
        android:name="uk.me.mungorae.androidweekly.ui.article.ArticleFragment"
        android:label="ArticleFragment"
        tools:layout="@layout/article_fragment">
        <argument
            android:name="article"
            app:argType="uk.me.mungorae.androidweekly.api.Article" />
    </fragment>
</navigation>